# Makefile.in

.PHONY: all clean

CPP = @CPP@
CPPFLAGS = @CPPFLAGS@
DEFS = @DEFS@

MPIFC = @MPIFC@
FCFLAGS = @FCFLAGS@

objects = module_hrldas_HYDRO.o

all: libNoahMP_cpl.a

libNoahMP_cpl.a: $(objects) hrldas_drv_HYDRO.o
	ar -r $@ $?

$(objects): %.o: %.f
	$(MPIFC) -o $@ $(FCFLAGS) $<

hrldas_drv_HYDRO.o: %.o: %.f
	$(MPIFC) -o $@ $(FCFLAGS) \
          $(addprefix -I../../,Routing Data_Rec MPP) $<

%.f: %.F
	$(CPP) $(CPPFLAGS) $(DEFS) $< > $@

clean:
	rm -f *.o *.mod *.stb *~ *.f Noah_hrldas_beta libNoahMP_cpl.a
