# Makefile 

.PHONY: all clean

CPP = @CPP@
CPPFLAGS = $(strip @CPPFLAGS@)
DEFS = @DEFS@

MPIFC = @MPIFC@
FCFLAGS = $(strip @FCFLAGS@)

objects = \
	module_date_utils_nudging.o \
	module_stream_nudging.o \
	module_nudging_io.o \
	module_nudging_utils.o

all:	$(objects)

$(objects): %.o: %.f
	$(MPIFC) -o $@ $(FCFLAGS) $<

%.f: %.F
	$(CPP) $(CPPFLAGS) $(DEFS) $< > $@

module_nudging_io.o: ../Data_Rec/module_namelist.o \
	             module_date_utils_nudging.o

module_stream_nudging.o: module_nudging_utils.o \
	      		 module_nudging_io.o

clean:
	rm -f *.o *.mod *.stb *~ *.f
