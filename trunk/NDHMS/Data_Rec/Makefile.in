# Makefile.in

.SUFFIXES: .o .F

CPP = @CPP@
CPPFLAGS = @CPPFLAGS@
NETCDF4_CFLAGS = @NETCDF4_CFLAGS@

MPIFC = @MPIFC@
FCFLAGS = @FCFLAGS@
NETCDF4_FFLAGS = @NETCDF4_FFLAGS@

include ../global.mk

all: $(Data_Rec_objects)

.F.o:
	$(CPP) $(CPPFLAGS) $(NETCDF4_CFLAGS) $(*).F > $(*).f
	$(MPIFC) -o $(@) $(FCFLAGS) $(NETCDF4_FFLAGS) -I../MPP $(*).f

clean:
	rm -f *.o *.mod *.stb *~ *.f
