# Makefile.in

.SUFFIXES: .o .F

CPP = @CPP@
CPPFLAGS = @CPPFLAGS@
NETCDF4_CFLAGS = @NETCDF4_CFLAGS@

MPIFC = @MPIFC@
FCFLAGS = @FCFLAGS@
NETCDF4_FFLAGS = @NETCDF4_FFLAGS@

include ../global.mk

all: $(Data_Rec_objects)

$(Data_Rec_objects): %.o: %.f
	$(MPIFC) -o $@ $(FCFLAGS) $(NETCDF4_FFLAGS) -I../MPP $<

%.f: %.F
	$(CPP) $(CPPFLAGS) $(NETCDF4_CFLAGS) $< > $@

clean:
	rm -f *.o *.mod *.stb *~ *.f
