# Makefile.in

.SUFFIXES:
.SUFFIXES: .o .F

MPIFC = @MPIFC@
FCFLAGS = @FCFLAGS@ -w -c -ffree-form -ffree-line-length-none -fconvert=big-endian -frecord-marker=4 
CPP = @CPP@
CPPFLAGS = @CPPFLAGS@
NETCDF4_CFLAGS = @NETCDF4_CFLAGS@

include ../global.mk

all: $(Data_Rec_objects)

.F.o:
	$(CPP) $(CPPFLAGS) $(NETCDF4_CFLAGS) $(*).F > $(*).f
	$(MPIFC) -o $(@) $(FCFLAGS) -I../MPP $(*).f

clean:
	rm -f *.o *.mod *.stb *~ *.f
