# Makefile 

CPP = @CPP@
CPPFLAGS = $(strip @CPPFLAGS@) -D_HRLDAS_OFFLINE_
DEFS = @DEFS@

MPIFC = @MPIFC@
FCFLAGS = $(strip @FCFLAGS@)

objects = module_date_utilities.o module_model_constants.o	\
	  module_wrf_utilities.o kwm_string_utilities.o

all: $(objects)

$(objects): %.o: %.f90
	$(MPIFC) -o $@ $(FCFLAGS) $<

%.f90: %.F
	$(CPP) $(CPPFLAGS) $(DEFS) $< > $@

clean:
	rm -f *.o *.mod *.stb *~ *.f90
