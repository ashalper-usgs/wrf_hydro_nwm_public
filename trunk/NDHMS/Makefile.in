# Makefile.in

.PHONY: all BASIC clean

DEFS = @DEFS@

include global.mk

all: Land_models/NoahMP/run/hrldas.exe

Land_models/NoahMP/run/hrldas.exe: libHYDRO.a
	cd $(dir $@) && make

# TODO: still need to get dependencies sorted out here. The commands
# below are sequence-sensitive.
libHYDRO.a:
	cd MPP && make
	cd Routing/Overland && make clean && make # <- hack; try to fix
	cd Data_Rec && make
	cd Routing && make
	cd HYDRO_drv && make
	cd LandModel_cpl && make
	cd LandModel && make
	if [ $(WRF_HYDRO_RAPID) = 1 ]; then \
	   (cd Rapid_routing && make -f makefile.cpl rapid); \
	fi
	ar -r $@ $(addsuffix /*.o,MPP Routing Routing/Overland Data_Rec \
                                  HYDRO_drv LandModel_cpl Rapid_routing \
                                  $(addprefix \
                                    LandModel/,Utility_routines phys IO_code))

install:
	if [ ! -d "Run" ]; then \
	   (mkdir Run); \
	fi
	cp Land_models/NoahMP/run/hrldas.exe Run/wrf_hydro.exe

clean:
	cd LandModel_cpl && make clean
	cd LandModel && make clean
	if [ $(WRF_HYDRO_RAPID) = 1 ]; then \
	   rm -f lib/librapid.a; \
	   (cd Rapid_routing && make -f makefile.cpl clean); \
	fi
	rm -rf */*.mod */*.o libHYDRO.a Run *~ lib/*.a CPL/*/*.o CPL/*/*.mod

